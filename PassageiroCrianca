package com.easytravel;

import java.util.Scanner;

public class PassageiroCrianca extends Passageiro{
    private String nomeMae;
    private String nomePai;
    private String telefoneResponsavel;
    Scanner leitura = new Scanner(System.in);

    public PassageiroCrianca( String nome, String nomeMae, String nomePai, String telefoneResponsavel, String telefone, String cpf, int idade) {
        super(nome, telefone, cpf, idade);
        this.nomeMae = nomeMae;
        this.nomePai = nomePai;
        this.telefoneResponsavel = telefoneResponsavel;
    }
    

    // construtores
    /*public PassageiroCrianca (String nome, String telefone, String cpf, int idade, String nomeMae, String nomePai, String telefoneResponsavel) {
