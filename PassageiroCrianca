package com.easytravel;

import java.util.Scanner;

public class PassageiroCrianca extends Passageiro implements Passagem {
    private String nomeMae;
    private String nomePai;
    private int idade;

    //construtores
    public PassageiroCrianca(String nome, String telefone, String cpf, String nomeMae, String nomePai, int idade){
        super(nome, telefone, cpf);
        this.nomeMae = nomeMae;
        this.nomePai = nomePai;
        this.idade = idade;
    }

    public PassageiroCrianca(){

    }

    //getters e setters
    public String getNomeMae() {
        return nomeMae;
    }

    public void setNomeMae(String nomeMae) {
        this.nomeMae = nomeMae;
    }

    public String getNomePai() {
        return nomePai;
    }

    public void setNomePai(String nomePai) {
        this.nomePai = nomePai;
    }

    public int getIdade() {
        return idade;
    }

    public void setIdade(int idade) {
        this.idade = idade;
    }

    //métodos
    @Override
    public void cadastroPassageiro(){
        Scanner leitura = new Scanner(System.in);
        System.out.println("Digite o nome da criança: ");
        String nomeCrianca = leitura.next();
        setNome(nomeCrianca);
        System.out.println("Digite o nome da mãe: ");
        String nomeMae = leitura.next();
        setNomeMae(nomeMae);
        System.out.println("Digite o nome do pai: ");
        String nomePai = leitura.next();
        setNomePai(nomePai);
        System.out.println("Digite a idade: ");
        int idade = leitura.nextInt();
        setIdade(idade);
        System.out.println("Telefone do responsável: ");
        String telefoneResponsavel = leitura.next();
        super.setTelefone(telefoneResponsavel);
        System.out.println("CPF: ");
        String cpfCrianca = leitura.next();
        super.setCPF(cpfCrianca);
        leitura.close();
    }

    @Override
    public void imprimeDadosPassageiro(){
        System.out.println("Nome: " + this.getNome());
        System.out.println("Nome da mãe: " + this.getNomeMae());
        System.out.println("Nome do pai: " + this.getNomePai());
        System.out.println("Idade: " + this.getIdade());
        System.out.println("Telefone do responsável: " + this.getTelefone());
        System.out.println("CPF: " + this.getCPF());
    }

    @Override
    public void compraPassagem() {

    }

    @Override
    public float calculaPreco() {
        return 0;
    }

    @Override
    public void geradorNumeroVoucher() {

    }
}
