package com.easytravel;

import java.util.Scanner;

public class PassageiroCrianca extends Passageiro{
    private String nomeMae;
    private String nomePai;

    public PassageiroCrianca(String nome, String telefone, String cpf, int idade, String nomeMae, String nomePai) {
        super(nome, telefone, cpf, idade);
        this.nomeMae = nomeMae;
        this.nomePai = nomePai;
    }

    public PassageiroCrianca() {
    }


    public String getNomeMae() {
        return nomeMae;
    }

    public void setNomeMae(String nomeMae) {
        this.nomeMae = nomeMae;
    }

    public String getNomePai() {
        return nomePai;
    }

    public void setNomePai(String nomePai) {
        this.nomePai = nomePai;
    }

    //métodos
    @Override
    public void cadastroPassageiro(){
        Scanner leitura = new Scanner(System.in);
        System.out.println("Digite o nome da criança: ");
        this.setNome(leitura.nextLine());
        System.out.println("Digite o nome da mãe:");
        this.nomeMae = leitura.nextLine();
        System.out.println("Digite o nome do pai:");
        this.nomePai = leitura.nextLine();
        System.out.println("Digite a idade da criança:");
        this.setIdade(leitura.nextInt());
        System.out.println("Telefone do responsável: ");
        super.setTelefone(leitura.next());
        System.out.println("CPF:");
        this.setCpf(leitura.next());
    }

    @Override
    public void imprimeDadosPassageiro(){
        System.out.println ("Nome:" + this.getNome());
        System.out.println ("Nome da mãe:" + this.getNomeMae());
        System.out.println ("Nome do pai:" + this.getNomePai());
        System.out.println ("Idade:" + this.getIdade());
        System.out.println ("Telefone do responsável:" + this.getTelefone());
        System.out.println ("CPF:" + this.getCpf());
    }
}
