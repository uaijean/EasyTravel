package com.easytravel;

import java.util.Scanner;

class Main {
    public static void main (String [] args) {
        Scanner leitura = new Scanner(System.in);
        Voo exemplo = new Voo("BR101", "Goiânia / GYN", "São Paulo / GRU", 50, 100, 250);
        exemplo.setDataPartida(2020,5,10,10,30);
        exemplo.getDataPartida();
        exemplo.setDataChegada(2020,5,11,5,10);
        exemplo.getDataChegada();
        exemplo.getAssentosPrimeiraClasse().add(1);
        exemplo.getAssentosPrimeiraClasse().add(1);
        exemplo.getAssentosPrimeiraClasse().add(2);
        exemplo.getAssentosPrimeiraClasse().add(3);
        exemplo.getAssentosPrimeiraClasse().add(4);
        exemplo.getAssentosSegundaClasse().add(1);
        exemplo.getAssentosSegundaClasse().add(1);
        exemplo.getAssentosSegundaClasse().add(2);
        exemplo.imprimeDadosVoo();
        Passageiro passageiro = new Passageiro();
        passageiro.cadastroPassageiro();
        exemplo.getListaPassageiro().add(passageiro);
        //Cartao cartaoCredito = new CartaoCredito("1234567891234567",100, 1);
        //cartaoCredito.cadastroCartao();
        //Cartao cartaoDebito = new CartaoDebito("1234567891234567", 100);
        Passageiro passageiroCrianca = new PassageiroCrianca();
        //Passageiro passageiroCrianca = new PassageiroCrianca("A", "Mãe de A", "Pai de A", "00-00","00-00","000.000.00-00",5);
        passageiroCrianca.cadastroPassageiro();
        exemplo.getListaPassageiro().add(passageiroCrianca);
        
        passageiro.imprimeDadosPassageiro();
        //cartaoCredito.imprimeDadosCartao();
        //cartaoDebito.imprimeDadosCartao();
        passageiroCrianca.imprimeDadosPassageiro();
        exemplo.imprimeListaPassageiros();
    }
}
